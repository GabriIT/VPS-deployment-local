http {
    include mime.types;

    upstream backend {
      server 51.79.229.237:5000;
    }

    upstream frontend {
      server client:3000;
    }

    server {
        listen 80;

        location / {
          proxy_pass  http://frontend/;
        }

        location = /api {
          return 302 /api/;
        }

        location /api/ {
          proxy_pass http://backend/;
        }
    }
}

events {}